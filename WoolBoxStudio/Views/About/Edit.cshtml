@model WoolBoxStudio.Models.About

@{
    ViewBag.Title = "Edit About Page";
}
@Html.Partial("_AdminMenu")
<h2>Edit About</h2>

@using (Html.BeginForm("Edit", "About", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.AboutID)
    
    <p>
      @Html.LabelFor(model => model.AboutMe):
    </p>
    <p>
        @Html.EditorFor(model => model.AboutMe)
        @Html.ValidationMessageFor(model => model.AboutMe)
    </p>
    <p>
        @Html.LabelFor(model => model.ImageLink):
    </p>
    <p>
    <input id="ImageLink" type="file" name="file" />
        @Html.ValidationMessageFor(model => model.ImageLink)
    </p>
    <p>
        <input type="submit" value="Save" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
